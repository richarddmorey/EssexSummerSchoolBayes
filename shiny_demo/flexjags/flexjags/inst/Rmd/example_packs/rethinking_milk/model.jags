model{
		
	for(i in 1:length(kcal.per.g)){   ## regression model for y
	    kcal.per.g[i] ~ dnorm(mu[i], tau)
	    mu[i] <- a + bn * neocortex.perc[i]
            #mu[i] <- a + bm * log.mass[i]
            #mu[i] <- a + bn * neocortex.perc[i] + bm * log.mass[i]
	} 
	
	## priors
	a ~ dnorm(0, .0001)   ## intercept
	bn ~ dnorm(0, 1)      ## slope
	bm ~ dnorm(0, 1)      ## slope
	sigma ~ dunif(0, 1)   ## residual std dev
	tau <- pow(sigma, -2) ## convert to precision

}
